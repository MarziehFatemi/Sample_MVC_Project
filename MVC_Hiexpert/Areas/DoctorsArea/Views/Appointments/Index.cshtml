@model IEnumerable<Project_Model.Model.Appointment>

@{
    ViewBag.Title = "Index";
}

<h2>نمایش لیست</h2>

<p>
    @Html.ActionLink("درج رکورد جدید", "Create",null,new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfVisit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfSessions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFristSession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group.GroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfVisit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSessions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFristSession)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentNumber)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.Id },new{@class="btn btn-warning"}) |
            @Html.ActionLink("جزییات", "Details", new { id=item.Id },new{@class="btn btn-info"}) |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id },new{@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
